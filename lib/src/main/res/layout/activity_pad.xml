<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.o80.locky.unlock.UnlockActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="75dp">

    <TextView
        android:id="@+id/pad_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:text="****"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintBottom_toTopOf="@+id/pad_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/pad_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_8"
        app:layout_constraintTop_toTopOf="@+id/pad_8"/>

    <Button
        android:id="@+id/pad_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/pad_5"
        app:layout_constraintLeft_toRightOf="@+id/pad_7"
        app:layout_constraintRight_toLeftOf="@+id/pad_9"
        app:layout_constraintTop_toBottomOf="@+id/pad_password"/>

    <Button
        android:id="@+id/pad_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="0dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/pad_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_8"/>

    <Button
        android:id="@+id/pad_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_5"
        app:layout_constraintTop_toTopOf="@+id/pad_5"/>

    <Button
        android:id="@+id/pad_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/pad_2"
        app:layout_constraintLeft_toRightOf="@+id/pad_4"
        app:layout_constraintRight_toLeftOf="@+id/pad_6"
        app:layout_constraintTop_toBottomOf="@+id/pad_8"/>

    <Button
        android:id="@+id/pad_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="0dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/pad_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_5"/>

    <Button
        android:id="@+id/pad_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_2"
        app:layout_constraintTop_toTopOf="@+id/pad_2"/>

    <Button
        android:id="@+id/pad_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/pad_0"
        app:layout_constraintLeft_toRightOf="@+id/pad_1"
        app:layout_constraintRight_toLeftOf="@+id/pad_3"
        app:layout_constraintTop_toBottomOf="@+id/pad_5"/>

    <Button
        android:id="@+id/pad_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="0dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/pad_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_2"/>

    <Button
        android:id="@+id/pad_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:text="Clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_0"
        app:layout_constraintTop_toTopOf="@+id/pad_0"/>

    <Button
        android:id="@+id/pad_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pad_clear"
        app:layout_constraintRight_toLeftOf="@+id/pad_ok"
        app:layout_constraintTop_toBottomOf="@+id/pad_2"
        app:layout_constraintVertical_bias="0.5"/>

    <Button
        android:id="@+id/pad_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="0dp"
        android:text="OK"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/pad_0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_0"/>

</android.support.constraint.ConstraintLayout>
