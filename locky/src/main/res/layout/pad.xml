<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="match_parent"
    tools:layout_width="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:id="@+id/pad_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/pad_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/pad_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/pad_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad_title"
        tools:text="*****" />

    <Button
        android:id="@+id/pad_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n7"
        android:textSize="30sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_8"
        app:layout_constraintTop_toTopOf="@+id/pad_8" />

    <Button
        android:id="@+id/pad_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n8"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pad_5"
        app:layout_constraintLeft_toRightOf="@+id/pad_7"
        app:layout_constraintRight_toLeftOf="@+id/pad_9"
        app:layout_constraintTop_toBottomOf="@+id/pad_password" />

    <Button
        android:id="@+id/pad_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n9"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/pad_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_8" />

    <Button
        android:id="@+id/pad_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n4"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_5"
        app:layout_constraintTop_toTopOf="@+id/pad_5" />

    <Button
        android:id="@+id/pad_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pad_2"
        app:layout_constraintLeft_toRightOf="@+id/pad_4"
        app:layout_constraintRight_toLeftOf="@+id/pad_6"
        app:layout_constraintTop_toBottomOf="@+id/pad_8" />

    <Button
        android:id="@+id/pad_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n6"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/pad_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_5" />

    <Button
        android:id="@+id/pad_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n1"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pad_2"
        app:layout_constraintTop_toTopOf="@+id/pad_2" />

    <Button
        android:id="@+id/pad_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pad_0"
        app:layout_constraintLeft_toRightOf="@+id/pad_1"
        app:layout_constraintRight_toLeftOf="@+id/pad_3"
        app:layout_constraintTop_toBottomOf="@+id/pad_5" />

    <Button
        android:id="@+id/pad_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n3"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/pad_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pad_2" />

    <ImageButton
        android:id="@+id/pad_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/clear_desc"
        android:padding="8dp"
        android:src="@drawable/ic_backspace"
        app:layout_constraintBottom_toBottomOf="@+id/pad_0"
        app:layout_constraintEnd_toEndOf="@+id/pad_1"
        app:layout_constraintRight_toLeftOf="@+id/pad_0"
        app:layout_constraintStart_toStartOf="@+id/pad_1"
        app:layout_constraintTop_toTopOf="@+id/pad_0" />

    <Button
        android:id="@+id/pad_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:text="@string/n0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pad_2"
        app:layout_constraintRight_toLeftOf="@+id/pad_ok"
        app:layout_constraintStart_toStartOf="@+id/pad_2"
        app:layout_constraintTop_toBottomOf="@+id/pad_2" />

    <ImageButton
        android:id="@+id/pad_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ok_desc"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@+id/pad_0"
        app:layout_constraintEnd_toEndOf="@+id/pad_3"
        app:layout_constraintLeft_toRightOf="@+id/pad_0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pad_3"
        app:layout_constraintTop_toTopOf="@+id/pad_0" />

</merge>
